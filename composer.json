{
    "name": "codebar/laravel-disk-monitor",
    "description": "Monitor metrics of Laravel disks",
    "keywords": [
        "codebar",
        "laravel-disk-monitor"
    ],
    "homepage": "https://github.com/codebar/laravel-disk-monitor",
    "license": "MIT",
    "authors": [
        {
            "name": "Ruslan Steiger",
            "email": "ruslan.steiger@codebar.ch",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "spatie/laravel-package-tools": "^1.1",
        "illuminate/contracts": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3",
        "spatie/laravel-ray": "^1.9",
        "vimeo/psalm": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "Codebar\\LaravelDiskMonitor\\": "src",
            "Codebar\\LaravelDiskMonitor\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Codebar\\LaravelDiskMonitor\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Codebar\\LaravelDiskMonitor\\LaravelDiskMonitorServiceProvider"
            ],
            "aliases": {
                "LaravelDiskMonitor": "Codebar\\LaravelDiskMonitor\\LaravelDiskMonitorFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
